<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/img_group"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_group"
        android:supportsRtl="true"
        android:enableOnBackInvokedCallback="true"
        android:theme="@style/Theme.HealthLink"
        tools:targetApi="tiramisu"
        android:networkSecurityConfig="@xml/network_security_config"
        >
        <activity
            android:name=".ui.ConnexionActivity"
            android:exported="true"
            android:theme="@style/Theme.HealthLink">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.OtpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DoctorSignInActivity"
            android:exported="false" />
        <activity
            android:name=".ui.HomepageActivity"
            android:exported="false" />
        <activity android:name=".ui.ProfileEditActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AppointmentsActivity"
            android:exported="false" />

    </application>

</manifest>