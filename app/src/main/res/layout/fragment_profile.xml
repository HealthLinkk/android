<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <LinearLayout android:id="@+id/linearProfile"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_300_dd">
        <androidx.appcompat.widget.Toolbar android:gravity="end"
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent" >
            <LinearLayout android:id="@+id/linearNavbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageButton
                    android:background="@drawable/rectangle_bg_white_a700_radius_16"
                    android:id="@+id/btnreturn"
                    android:layout_height="@dimen/_40pxh"
                    android:layout_width="@dimen/_40pxh"
                    android:paddingHorizontal="@dimen/_14pxh"
                    android:paddingVertical="@dimen/_14pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_arrowleft" tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/txtProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_110pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_weight="0.66"

                    android:singleLine="true"
                    android:text="@string/txtProfile"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <ImageButton
                    android:background="@drawable/rectangle_radius_10"
                    android:id="@+id/btnBack"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_8pxh"
                    android:layout_marginStart="@dimen/_111pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="@dimen/_24pxh"
                    android:paddingHorizontal="@dimen/_1pxh"
                    android:paddingVertical="@dimen/_1pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_profile" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/imageImage"

            android:layout_width="@dimen/_120pxh"
            android:layout_height="@dimen/_120pxh"
            android:layout_gravity="top|center"
            android:layout_marginStart="@dimen/_127pxh"
            android:layout_marginTop="@dimen/_20pxh"
            android:layout_marginEnd="@dimen/_127pxh"
            android:scaleType="centerCrop"
            android:src="@drawable/img_image_120x120" />

        <LinearLayout
            android:id="@+id/linearColumnmomonmarhaban"
            style="@style/groupStylewhite_A700cornerRadius"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_520pxh"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="@dimen/_40pxv"
            android:layout_marginTop="@dimen/_40pxv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMomonMarhaban"
                style="@style/txtIntersemibold20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_30pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_nom" />

            <TextView
                android:id="@+id/txtEmail"
                style="@style/txtInterregular14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"

                android:singleLine="true"
                android:text="@string/lbl_email" />

            <LinearLayout
                android:id="@+id/linearLabel"
                style="@style/groupStylegray_50cornerRadius"
                android:layout_width="389dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/txtMyAppointment"
                    style="@style/txtInterregular12"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_34pxh"
                    android:layout_marginTop="@dimen/_23pxv"
                    android:layout_marginBottom="@dimen/_20pxv"
                    android:layout_weight="0.51"
                    android:background="@drawable/rectangle_bg_gray_50_radius_32_4"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/txtRdv"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/lineDivider"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42pxv"
                    android:layout_marginStart="@dimen/_34pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_weight="0.01"
                    android:background="@color/gray_300" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/txtMedicalrecords"
                    style="@style/txtInterregular12"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35pxh"
                    android:layout_marginTop="@dimen/_22pxv"
                    android:layout_marginEnd="@dimen/_36pxh"
                    android:layout_marginBottom="@dimen/_21pxv"
                    android:layout_weight="0.49"
                    android:background="@drawable/rectangle_bg_gray_50_radius_32_4"
                    android:ellipsize="end"

                    android:singleLine="true"
                    android:text="@string/txtDossie"
                    android:textSize="12sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/etPersonalInform"
                style="@style/etOutline"

                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:background="@drawable/rectangle_bg_white_a701_radius_18_885"
                android:drawableStart="@drawable/drawable_img_personalcard"

                android:ellipsize="end"


                android:paddingTop="@dimen/_22pxv"

                android:paddingBottom="@dimen/_27pxv"
                android:paddingStart="@dimen/_20pxv"
                android:singleLine="true"
                android:text="@string/txtInfos"
                android:textColorHint="@color/gray_901" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ordonnances"
                style="@style/etOutline"

                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:background="@drawable/rectangle_bg_white_a701_radius_18_885"
                android:drawableStart="@drawable/img_map"

                android:ellipsize="end"


                android:paddingTop="@dimen/_22pxv"

                android:paddingBottom="@dimen/_27pxv"
                android:paddingStart="@dimen/_33pxv"
                android:singleLine="true"
                android:text="@string/ordannances"
                android:textColorHint="@color/gray_901" />


        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>