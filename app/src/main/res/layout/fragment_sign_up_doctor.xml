<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signUpFragment"

    tools:context=".ui.fragments.SignUpFragment">

    <FrameLayout
        android:id="@+id/frameSignUp"
        style="@style/groupStylegray_300_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/linearColumngroup"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginBottom="@dimen/_20pxv"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtDescription"
                style="@style/txtInterregular12_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_21pxh"
                android:gravity="start"

                android:text="@string/msg_nouveau_sur_hea" />

            <EditText
                android:id="@+id/Nom"
                style="@style/etSolidRoundedOutline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_2pxh"
                android:background="@drawable/rectangle_bg_white_a700_border_gray_200_radius_16"
                android:ellipsize="end"
                android:hint="@string/lbl_nom"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_20pxh"
                android:paddingTop="@dimen/_19pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_18pxv"
                android:singleLine="true"
                android:textColorHint="@color/gray_400"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/Prenom"
                style="@style/etSolidRoundedOutline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_2pxh"
                android:background="@drawable/rectangle_bg_white_a700_border_gray_200_radius_16"
                android:ellipsize="end"
                android:hint="@string/lbl_Prenom"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_20pxh"
                android:paddingTop="@dimen/_19pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_18pxv"
                android:singleLine="true"
                android:textColorHint="@color/gray_400"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/Password"
                style="@style/etSolidRoundedOutline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_2pxh"
                android:background="@drawable/rectangle_bg_white_a700_border_gray_200_radius_16"
                android:ellipsize="end"
                android:hint="@string/lbl_password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/_20pxh"
                android:paddingTop="@dimen/_19pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_18pxv"
                android:singleLine="true"
                android:textColorHint="@color/gray_400"
                tools:ignore="Autofill" />
            <EditText
                android:id="@+id/Email"
                style="@style/etSolidRoundedOutline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_2pxh"
                android:background="@drawable/rectangle_bg_white_a700_border_gray_200_radius_16"
                android:ellipsize="end"
                android:hint="@string/lbl_email"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/_20pxh"
                android:paddingTop="@dimen/_19pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_18pxv"
                android:singleLine="true"
                android:textColorHint="@color/gray_400"
                tools:ignore="Autofill" />
            <LinearLayout
                android:id="@+id/linearForm"
                style="@style/etSolidRoundedOutline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_2pxh"
                android:gravity="start"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/frameFLAG"
                    style="@style/etSolidRoundedOutline"
                    android:layout_width="@dimen/_24pxh"
                    android:layout_height="@dimen/_17pxv"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_18pxv"
                    android:layout_marginBottom="@dimen/_18pxv">

                    <ImageView
                        android:id="@+id/imageEngland"
                        android:layout_width="@dimen/_24pxh"
                        android:layout_height="@dimen/_17pxh"
                        android:layout_gravity="start"
                        android:scaleType="fitXY"

                        tools:ignore="ContentDescription"
                        android:src="@drawable/img_england" />

                </FrameLayout>

                <EditText
                    android:id="@+id/NumTel"
                    style="@style/etSolidRoundedOutline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="@string/lbl_your_number"
                    android:inputType="number"
                    android:paddingStart="@dimen/_20pxh"
                    android:paddingTop="@dimen/_19pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_18pxv"
                    android:singleLine="true"

                    android:textColorHint="@color/gray_400"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSinscrire"
                style="@style/btnSolidRounded_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_16pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_16pxv"
                android:singleLine="true"
                android:text="@string/txtSuivant"
                android:textAllCaps="false"
               />

            <LinearLayout
                android:id="@+id/linearRowrectangleelevenOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_26pxv"
                android:layout_marginEnd="@dimen/_7pxh"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtOrsigninwith"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4pxh"
                    android:layout_weight="0.26"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/lbl_or_sign_in_with" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLoginalternati"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_120pxh"
                android:layout_marginTop="@dimen/_32pxv"
                android:layout_marginEnd="@dimen/_21pxh"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnGoogle"
                    android:layout_width="@dimen/_46pxh"
                    android:layout_height="@dimen/_46pxh"
                    android:background="@drawable/rectangle_bg_gray_100_radius_23"
                    android:paddingHorizontal="@dimen/_11pxh"
                    android:paddingVertical="@dimen/_11pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_google"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/btnFacebook"
                    android:layout_width="@dimen/_46pxh"
                    android:layout_height="@dimen/_46pxh"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:background="@drawable/rectangle_bg_gray_100_radius_23"
                    android:paddingHorizontal="@dimen/_11pxh"
                    android:paddingVertical="@dimen/_11pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_facebook"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>