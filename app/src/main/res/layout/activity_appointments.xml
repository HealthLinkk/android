<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="ui.AppointmentsActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageButton
        android:id="@+id/btnreturn"
        android:layout_width="41dp"
        android:layout_height="48dp"
        android:background="@drawable/rectangle_bg_white_a700_radius_16"
        android:src="@drawable/img_arrowleft"
        app:layout_constraintEnd_toStartOf="@+id/btnUpcoming"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />


    <Button
        android:id="@+id/btnUpcoming"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:text="Upcoming"
        app:layout_constraintEnd_toStartOf="@+id/btnCompleted"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnreturn"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnCompleted"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:text="Completed"
        app:layout_constraintEnd_toStartOf="@+id/btnCanceled"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnUpcoming"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCanceled"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Canceled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnCompleted"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/AppointmentFragment"
        android:name="com.esprit.healthlink.ui.fragments.UpcomingFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpcoming"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>